<p id="notice"><%= notice %></p>

<h1>Listing Canvas</h1>

<table>
  <thead>
    <tr>
      <th>A</th>
      <th>A type</th>
      <th>Label</th>
      <th>Width</th>
      <th>Height</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @canvas.each do |canva| %>
      <tr>
        <td><%= canva.a_id %></td>
        <td><%= canva.a_type %></td>
        <td><%= canva.label %></td>
        <td><%= canva.width %></td>
        <td><%= canva.height %></td>
        <td><%= link_to 'Show', canva %></td>
        <td><%= link_to 'Edit', edit_canva_path(canva) %></td>
        <td><%= link_to 'Destroy', canva, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

